<% if recipe.favorited_by?(current_user) %>
   <%= link_to recipe_favorites_path(recipe), method: :delete, remote: true do %> <%#いいねの非同期はremote:true,コメント非同期はlocal:falseでないとテンプレートエラーが起こる %>
    <i class="fas fa-heart text-danger i-size"></i><span><%= recipe.favorites.count %></span>
    <span>コメント数 : <%= recipe.recipe_comments.count %></span>
  <% end %>
<% else %>
  <%= link_to recipe_favorites_path(recipe), method: :post, remote: true do %>
    <i class="fas fa-heart text-secondary i-size"></i><span><%= recipe.favorites.count %></span>
    <span>コメント数 : <%= recipe.recipe_comments.count %></span>
  <% end %>
<% end %>
